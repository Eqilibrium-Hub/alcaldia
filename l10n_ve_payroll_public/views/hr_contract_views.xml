<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="hr_contract_view_form_inherit" model="ir.ui.view">
        <field name="name">hr.contract.form.l10n.ve.payroll.form.inherit</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='information']" position="after">
                <page string='Beneficios VS DÃ­as Trabajados' name="beneficios_vs_trabajados">
                    <group col='4' colspan='2'>
                        <field name="years_worked"/>
                        <field name="month_worked"/>
                        <field name="month_accumulated_worked"/>
                    </group>
                </page>  
            </xpath>
            <xpath expr="//group[@name='salary']" position="after">
                <group col='4' colspan='2'>
                    <field name="wage_compensate"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>