<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="hr_employee_child_view_tree" model="ir.ui.view">
        <field name="name">hr.employee.child.view.tree</field>
        <field name="model">hr.employee.child</field>
        <field name="arch" type="xml">
            <tree string="Hijos/Hijas" editable="top">
                <field name="name"/>
                <field name="birth_date"/>
                <field name="academic_degree_id"/>
                <field name="age"/>
            </tree>
        </field>
    </record>

    <record id="hr_employee_academic_degree_view_tree" model="ir.ui.view">
        <field name="name">hr.employee.academic.degree.view.tree</field>
        <field name="model">hr.employee.academic.degree</field>
        <field name="arch" type="xml">
            <tree string="Grado Académico" editable="top">
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="hr_employee_view_form_inherit" model="ir.ui.view">
        <field name="name">hr.employee.form.l10n.ve.payroll.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='hr_settings']" position="after">
                <page string='Hijos/Hijas' name="childs">
                    <group col='4' colspan='2'>
                        <field name="childs_ids" nolabel="1"/>
                    </group>
                </page>  
            </xpath>
            <xpath expr="//field[@name='certificate']" position="replace">
                <field name="academic_degree_id"/>
            </xpath>
        </field>
    </record>

    <record id="hr_employee_academic_degree_action" model="ir.actions.act_window">
        <field name="name">Grado Académico</field>
        <field name="res_model">hr.employee.academic.degree</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Sin Grados Académicos</p>
        </field>
    </record>
    
    <menuitem id="hr_employee_academic_degree_menu" name="Grado Académico" action="hr_employee_academic_degree_action" parent="hr.hr_menu_configuration" groups="base.group_user" sequence="10"/>

</odoo>