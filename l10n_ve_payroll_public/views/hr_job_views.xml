<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_hr_job_l10n_ve_payroll_public_form" model="ir.ui.view">
        <field name="name">hr.job.form.l10n.ve.payroll.form.inherit</field>
        <field name="model">hr.job</field>
        <field name="inherit_id" ref="hr.view_hr_job_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[2]" position="after">
                <page string='Salarios' name="salary">
                    <group col='4' colspan='2'>
                        <field name="wage"/>
                        <field name="wage_compensate"/>
                    </group>
                </page>  
            </xpath>
        </field>
    </record>
</odoo>