<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="hr_payroll_structure_type_payroll_view_form" model="ir.ui.view">
        <field name="name">hr.payroll.structure.type.l10n.ve.payroll.form.inherit</field>
        <field name="model">hr.payroll.structure.type</field>
        <field name="inherit_id" ref="hr_payroll.hr_payroll_structure_type_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='wage_type']" position="after">
                <separator string="Días Anuales"/>
                <field name="days_utilities_annual" string="Utilidades"/>
                <field name="days_vacation_annual" string="Vacaciones"/>
                <separator string="Días"/>
                <field name="days_bonus_vacations" string="Bonos Vacacionales"/>
            </xpath>
        </field>
    </record>
</odoo>